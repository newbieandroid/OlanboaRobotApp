<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:keepScreenOn="true">


    <EditText
        android:id="@+id/loginNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginPassEt"
        android:layout_centerInParent="true"
        android:layout_marginLeft="360dp"
        android:layout_marginRight="360dp"
        android:background="@drawable/back_et"
        android:gravity="center"
        android:hint="请输入智家365账号"
        android:maxLength="20"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true" />


    <EditText
        android:id="@+id/loginPassEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="360dp"
        android:background="@drawable/back_et"
        android:gravity="center"
        android:hint="请输入智家365密码"
        android:maxLength="20"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true" />


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="40dp"
        android:background="@drawable/back_loginbtn"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="登录" />

</RelativeLayout>